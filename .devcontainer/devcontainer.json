// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "Khumbu",
	"build": {
		// Path is relative to the devcontainer.json file.
		"dockerfile": "dev-kit.Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
                "/tmp/Visual_Studio_Code_Extensions/DavidAnson.vscode-markdownlint-0.55.0.vsix",
                "/tmp/Visual_Studio_Code_Extensions/eamodio.gitlens-2024.5.2405.vsix",
                "/tmp/Visual_Studio_Code_Extensions/josetr.cmake-language-support-vscode-0.0.9.vsix",
                "/tmp/Visual_Studio_Code_Extensions/llvm-vs-code-extensions.vscode-clangd-0.1.28.vsix",
                "/tmp/Visual_Studio_Code_Extensions/ms-azuretools.vscode-docker-1.29.1.vsix",
                "/tmp/Visual_Studio_Code_Extensions/ms-vscode.cmake-tools-1.18.40.vsix",
                "/tmp/Visual_Studio_Code_Extensions/ms-vscode.cpptools-extension-pack-1.3.0.vsix",
                "/tmp/Visual_Studio_Code_Extensions/twxs.cmake-0.0.17.vsix"
			],
			"settings": {
				"clangd.arguments": [
					"--compile-commands-dir=${workspaceFolder}/build"
				]
			}
		}
	},
    "mounts": [
        "source=${localEnv:HOME}/workspace/everest-template/.devcontainer/Visual_Studio_Code_Extensions,target=/tmp/Visual_Studio_Code_Extensions,type=bind,consistency=cached"
    ]
}
